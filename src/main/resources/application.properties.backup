spring.application.name=sigma-gym
spring.profiles.active=dev

# Production Database Configuration (MySQL) - only used when profile is 'prod'
spring.datasource.url=jdbc:mysql://localhost:3306/sigma_gym?createDatabaseIfNotExist=true&useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
spring.datasource.username=root
spring.datasource.password=root1234
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.database-platform=org.hibernate.dialect.MySQL8Dialect
spring.jpa.open-in-view=false
spring.jpa.hibernate.naming.physical-strategy=org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl

# JWT Configuration
application.security.jwt.secretKey=qLpCL+/tT63TFQvInL9L2bpeSVufYSPDUqPViyyjUZ3arLZae077RFo/TF4/QU9ZKvQZZbpRuuz6gdeoyAiHMQ==
application.security.jwt.expiration=86400000
jwt.secret=mySecretKey
jwt.expiration=86400000

# Logging
logging.level.com.sigma.gym=DEBUG
logging.level.com.sigma.gym.security.JwtAuthenticationFilter=INFO
logging.level.org.hibernate.SQL=INFO
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=WARN

# MercadoPago Configuration
app.mercadopago.access-token=${MP_ACCESS_TOKEN:TEST-ACCESS-TOKEN}
app.mercadopago.public-key=${MP_PUBLIC_KEY:TEST-PUBLIC-KEY}
app.mercadopago.webhook-secret=${MP_WEBHOOK_SECRET:webhook-secret}

# Seed Users Configuration
app.seed.owner.email=${SEED_OWNER_EMAIL:owner@sigmagym.local}
app.seed.owner.username=${SEED_OWNER_USERNAME:owner}
app.seed.owner.password=${SEED_OWNER_PASSWORD:Owner123!}

app.seed.trainer.email=${SEED_TRAINER_EMAIL:trainer@sigmagym.local}
app.seed.trainer.username=${SEED_TRAINER_USERNAME:trainer}
app.seed.trainer.password=${SEED_TRAINER_PASSWORD:Trainer123!}
app.mercadopago.base-url=${APP_BASE_URL:http://localhost:8080}

# Invoicing Configuration
gym.invoicing.timezone=America/Argentina/Buenos_Aires
gym.invoicing.defaultInvoiceType=RECEIPT
gym.invoicing.tax.enabled=true
gym.invoicing.tax.rate=21.0
gym.invoicing.numbering.pos=0001
gym.invoicing.numbering.series=A
gym.invoicing.storage.backend=FS
gym.invoicing.storage.basePath=/var/app/invoices
gym.invoicing.email.from=no-reply@sigmagym.app
gym.invoicing.email.subjectTemplate=Your receipt \${invoiceNumber}
